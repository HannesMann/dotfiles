#!/bin/bash
cp /etc/default-wine-install.conf /tmp/user-wine-install.conf
trap "rm /tmp/user-wine-install.conf" EXIT

"${EDITOR:-nano}" /tmp/user-wine-install.conf
echo "" >> /tmp/user-wine-install.conf

echo "Proceed with: "
while read line; do
	if [[ ! -z $line && $line != '#'* ]]; then
		echo "  $line"
	fi
done < /tmp/user-wine-install.conf

read -p "Y/N? " yn
case $yn in
	[Yy]* ) ;;
	* ) exit;;
esac

while read line; do
	if [[ ! -z $line && $line != '#'* ]]; then
		line=$(echo -n $line | xargs)

		echo "Installing $line..."
		echo ""

		winetricks --force -q $line || { echo "Installation of '$line' failed" ; exit 1; }

		echo ""
	fi
done < /tmp/user-wine-install.conf

wineserver -p

setup_dxvk install
setup_vkd3d_proton install

wine reg add "HKEY_CURRENT_USER\Software\Wine\DllOverrides" /v "d3d6" /d native,builtin /f
wine reg add "HKEY_CURRENT_USER\Software\Wine\DllOverrides" /v "d3d7" /d native,builtin /f
wine reg add "HKEY_CURRENT_USER\Software\Wine\DllOverrides" /v "d3d8" /d native,builtin /f

winetricks $1 --force -q win10

wineserver -k
