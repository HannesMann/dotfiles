-			enc->dts_offset = 0;
-	}
+	if (get_avc_property(enc, B_PIC_PATTERN, &b_frames) &&
+		get_avc_property(enc, MAX_CONSECUTIVE_BPICTURES, &b_max))
+		enc->dts_offset = b_frames + 1;
+	else
+		enc->dts_offset = 0;
 }
 
